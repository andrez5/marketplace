
<div class="card-container">
  <div class="card mb-3" style="width: 800px;">
    <div class="card-info">
        <div class="col-md-6">
          <%= cl_image_tag(@product.photo.key, :size => "455X400") %>
        </div>
      <div class="col-md-6">
        <div class="card-body-2">
          <h3 class="card-title"><%=@product.title%></h3>
          <p class="card-text"><%= @product.info %></p>
          <h2 class="card-trip-pricing"><%= number_to_currency(@product.price)%></h2>
          <%if @product.available > 0 %>
            <p>Quantity: <%=@product.available %></p>
            <p> <%= @product.user.first_name.capitalize%> <%= @product.user.last_name.capitalize %> is the seller of this product.</p>
            <%= link_to 'Buy', new_product_offer_path(@product), class: 'btn btn-lg btn-flat' %>
          <%else%>
            <h2 class="estoque">Unavailable</h2>
          <%end %>
          <%= link_to 'Delete', product_path(@product), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-lg btn-dark' %>
        </div>
      </div>
    </div>
  </div>

</div>
